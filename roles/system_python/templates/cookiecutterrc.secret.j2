#jinja2: lstrip_blocks: True
default_context:
    {% if full_name is defined %}
    full_name: {{ full_name }}
    {% endif %}
    {% if git_email is defined %}
    email: {{ git_email }}
    {% endif %}
    {% if git_user is defined %}
    github_username: {{ git_user }}
    {% endif %}
cookiecutters_dir: "~/.local/share/cookiecutter/cookies"
replay_dir: "~/.local/share/cookiecutter/replay"
abbreviations:
    gh: git@github.com:{0}.git
    bb: https://bitbucket.org/{0}

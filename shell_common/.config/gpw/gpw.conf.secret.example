# default username if username is not provided
user="user_name"

# Required message or string fulfilling the requirement of site
required_msg="anything is good"

# (output-required_msg) length
length=20

# Custom length for different sites
# syntax - set_len site_name length
# Example
# set_len google 20
set_len paypal 20

# hash algorithm iteration count
iter_count=500

# Seconds for which output will be in clipboard
wait_sec=10

# Clipboard selection : either of "primary", "secondary", "clipboard" or "stdout"
clipboard_name="primary"

################################################################################
##### Randomization part #######
################################################################################

# Random prefix with username
user_prefix="user_name_start"

# Random suffix with username
user_suffix="user_name_end"

# Random prefix with site
site_prefix="site_name_start"

# Random suffix with site
site_suffix="site_name_end"

# random data file 
# generated by 'head -c 1024</dev/urandom|base64>~/.local/share/gpw/salt.secret'
random_data_file=$gpw_data_location/salt.secret
